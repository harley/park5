<h1>View Message</h1>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Incoming Message", incoming_messages_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to "Outgoing Message", outgoing_messages_path, class: 'nav-link'  %>
  </li>
  <li class="nav-item">
    <%= link_to "Friend List", relationships_path, class: 'nav-link' %>
  </li>
	<li class="nav-item">
    <%= link_to "New Message", new_message_path, class: 'nav-link' %>
  </li>
</ul>
<%= form_for @message do |f|%>
	<% if @message.errors.present?%>
	<div class="alert alert-danger">
  <%= @message.errors.full_messages.to_sentence%>
  </div>
  <%end%>

	<% if @message.body %>
		<div>Sender:	<%= f.label :sender, @message.sender %></div>
		<div>Subject: <%= f.label :subject, @message.subject %></div>
		<div>Body: <%= f.label :body, @message.body %></div>
		<div>Photo <%= image_tag(@message.photo) if @message.photo? %></div>
	<% else %>
		<h1>YOU HAVE ALREADY READ THIS MESSAGE</h1>
	<% end %>
<% end %>