<h1>Sent Messages</h1>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Incoming Message", incoming_messages_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to "Outgoing Message", outgoing_messages_path, class: 'nav-link active'  %>
  </li>
  <li class="nav-item">
    <%= link_to "Friend List", relationships_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to "New Message", new_message_path, class: 'nav-link' %>
  </li>
</ul>
<% if @outgoing_messages%>
	<div class="inline">You have sent <%= @outgoing_messages.size %> messages 
	<%= link_to "New Message", new_message_path, class: 'btn btn-primary btn-sm'  %></div>
	<table class="table">
	<tr>
		<th><strong>To</strong></th>
		<th><strong>Subject</strong></th>
		<th><strong>Read at</strong></th>
	</tr>
	<% @outgoing_messages.each do |message| %>
		<tr>
			<td><%= message.recipient %></td>
			<td><%= message.subject %></td>
			<% if message.read_status == 1%>
				<td><%= message.updated_at %></td>
			<% else%>
				<td>Unread</td>
			<% end %>
<% end %>
		</tr>
<% else %>
	<p>You haven't sent any messages. Start a conversation now:<%= link_to "New Message", "/" %></p>
<% end %>

</table>